{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "module": "AMD",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "allowUmdGlobalAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src"]
}
